#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        string s;
        int count=0;
        cin>>s;
        int n=s.size();
        for(int i=0;i<n;i++){
            count++;
        }
        if(count>10) cout<<s[0]<<count-2<<s[n-1]<<endl;
        else cout<<s<<endl;
    }
	return 0;
}
