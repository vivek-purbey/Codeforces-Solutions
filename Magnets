#include<iostream>
using namespace std;
int main(){
    int n, count=0;
    cin>>n;
    int a[100000];
    for(int i=0; i<n; i++)
        cin>>a[i];
    for(int i=0; i<n; i++)
    {
        if(a[i]!=a[i+1]) //opposite pole attract each-other
            count++;
    }
    cout<<count<<endl;
    return 0;
}
